<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue2"
    tools:context=".main.view.main.view.OtherInformationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue2">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/otherInformation_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue2"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/otherInformation_toolbar_msg"
            app:titleMarginStart="10dp"
            app:titleTextColor="@color/white"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/otherInformation_icon_helper_environment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:contentDescription="@null"
            android:src="@drawable/baseline_help_outline_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otherInformation_toolbar" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/otherInformation_textField_layout_environment"
            style="@style/textInputLayout"
            app:helperText="@string/optional_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otherInformation_icon_helper_environment">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otherInformation_textFiled_environment"
                style="@style/textInputEditText"
                android:hint="@string/otherInformation_editField_environment">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/otherInformation_icon_helper_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:contentDescription="@null"
            android:src="@drawable/baseline_help_outline_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otherInformation_textField_layout_environment" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/otherInformation_textField_layout_property"
            style="@style/textInputLayout"
            app:helperText="@string/optional_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otherInformation_icon_helper_property">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otherInformation_textFiled_property"
                style="@style/textInputEditText"
                android:hint="@string/otherInformation_editField_property">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>


        <ImageView
            android:id="@+id/otherInformation_icon_helper_scenery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:contentDescription="@null"
            android:src="@drawable/baseline_help_outline_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otherInformation_textField_layout_property" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/otherInformation_textField_layout_scenery"
            style="@style/textInputLayout"
            app:helperText="@string/optional_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otherInformation_icon_helper_scenery">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otherInformation_textFiled_scenery"
                style="@style/textInputEditText"
                android:hint="@string/otherInformation_editfield_scenery">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/otherInformation_icon_helper_unfolding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:contentDescription="@null"
            android:src="@drawable/baseline_help_outline_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/otherInformation_textField_layout_scenery" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/otherInformation_textField_layout_unfolding"
            style="@style/textInputLayout"
            app:helperText="@string/required_field"
            app:counterMaxLength="800"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otherInformation_icon_helper_unfolding">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otherInformation_textFiled_unfolding"
                style="@style/textInputEditText"
                android:maxLength="801"
                android:hint="@string/otherInformation_editfield_unfolding">
            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/otherInformation_button_next"
            style="@style/Theme.MyIPOApp.ButtonMain"
            android:layout_marginTop="24dp"
            android:enabled="false"
            android:text="@string/next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otherInformation_textField_layout_unfolding" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


